@model DogKennel_Project.Models.Breed

@{
    ViewData["Title"] = "Create";
}
<main id="main">
    <!-- ======= About Section ======= -->
    <section id="about" class="about">

        <div class="container" data-aos="fade-up">
            <div class="row gx-0">

                <div class="col-lg-8 d-flex flex-column justify-content-center" data-aos="fade-up" data-aos-delay="200">
                    <div class="content">
                        <h1>Create</h1>

                        <h4>Breed</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Breed_Name" class="control-label"></label>
                                        <input asp-for="Breed_Name" class="form-control" />
                                        <span asp-validation-for="Breed_Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Age_Years" class="control-label"></label>
                                        <input asp-for="Age_Years" class="form-control" />
                                        <span asp-validation-for="Age_Years" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DogGroupId" class="control-label"></label>
                                        <select asp-for="DogGroupId" class="form-control" asp-items="ViewBag.DogGroupId"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ActivityLevelId" class="control-label"></label>
                                        <select asp-for="ActivityLevelId" class="form-control" asp-items="ViewBag.ActivityLevelId"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SizeId" class="control-label"></label>
                                        <select asp-for="SizeId" class="form-control" asp-items="ViewBag.SizeId"></select>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 d-flex align-items-center" data-aos="zoom-out" data-aos-delay="200">
                    <img src="~/assets/img/Dog-Breeds.png" class="img-fluid" alt="">
                </div>

            </div>
        </div>

    </section><!-- End About Section -->



</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
